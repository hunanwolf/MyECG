<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/shallowGrey"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社区论坛"
            android:layout_centerInParent="true"

            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/iv_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/nav_fabu"/>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:padding="10dp"
            android:src="@mipmap/nav_search"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:id="@+id/tabs"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/tabTextSize"
        app:tabIndicatorColor="@color/lvse"
        app:tabSelectedTextColor="@color/lvse"
        app:tabTextColor="@color/grey"
        ></android.support.design.widget.TabLayout>
    <com.compassecg.test720.compassecg.View.CustomViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager">

    </com.compassecg.test720.compassecg.View.CustomViewPager>
</LinearLayout>
