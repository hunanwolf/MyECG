<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shallowGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@color/white">

            <ImageView
                android:id="@+id/back"
                style="@style/iv_back"
                android:src="@drawable/back_tomove" />

            <TextView
                android:id="@+id/textView4"
                style="@style/tv_title"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="个人信息"
                android:textColor="@color/gwe"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/shallowGrey"></View>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shallowGrey"
                android:orientation="vertical"
                tools:context="com.test720.petroleumbridge.activity.InfoActivity">


                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="头像"
                        android:textColor="@color/gwe"
                        android:textSize="16sp" />

                    <com.compassecg.test720.compassecg.View.CircleImageView
                        android:id="@+id/header_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/name"
                    style="@style/ll_background">

                    <TextView
                        style="@style/info_title_tv"
                        android:text="姓名" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/info_tv"
                        android:layout_marginRight="15dp"
                        android:hint="暂未完善" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/phone"
                    style="@style/ll_background">

                    <TextView
                        style="@style/info_title_tv"
                        android:text="手机号码" />

                    <TextView
                        android:id="@+id/phone_tv"
                        style="@style/info_tv"
                        android:layout_marginRight="15dp"
                        android:hint="暂未完善"
                        />

                    <!--<ImageView-->
                    <!--style="@style/iv_right_arrow"-->
                    <!--android:src="@drawable/youbiao" />-->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gender"
                    style="@style/ll_background"
                    android:layout_marginTop="0.5dp">

                    <TextView
                        style="@style/info_title_tv"
                        android:text="职称" />


                    <TextView
                        android:id="@+id/gender_tv"
                        style="@style/info_tv"
                        android:layout_marginRight="15dp"
                        android:hint="暂未完善"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Hospital"
                    style="@style/ll_background">

                    <TextView
                        style="@style/info_title_tv"
                        android:text="医院" />

                    <TextView
                        android:id="@+id/Hospital_tv"
                        style="@style/info_tv"
                        android:layout_marginRight="15dp"
                        android:hint="暂未完善"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/skill"
                    style="@style/ll_background">

                    <TextView
                        style="@style/info_title_tv"
                        android:text="科室" />

                    <TextView
                        android:id="@+id/skill_tv"
                        style="@style/info_tv"
                        android:layout_marginRight="15dp"
                        android:hint="暂未完善"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10.5dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="16dp"
                        android:text="个人简介"
                        android:gravity="center_vertical"
                        android:textColor="@color/gwe"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/intro_tv"
                        style="@style/info_tv"

                        android:paddingRight="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/more" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/renzheng"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="16dp"
                        android:text="认证状态"
                        android:gravity="center_vertical"
                        android:textColor="@color/gwe"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/renz_tv"
                        style="@style/info_tv"
                        android:layout_marginRight="5dp"
                        android:paddingRight="16dp"

                        android:text="· 未认证"
                        android:textColor="@color/wenhong" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/more" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pass_change"
                    style="@style/ll_background"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="0.5dp">

                    <TextView
                        style="@style/info_title_tv"
                        android:layout_weight="1"
                        android:text="修改密码" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
