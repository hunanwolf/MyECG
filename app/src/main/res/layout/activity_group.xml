<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".GroupConsultation.activity.GroupActivityH">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四川组"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/nav_fabu"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/nav_return"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>
    <com.compassecg.test720.compassecg.View.BottomScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/img2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/xj_zu_pic"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四川组"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/img2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="75dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四川省官方心电图会诊组"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/img2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="成员 120000人"
            android:textSize="16sp"
            android:textColor="@color/lvse"
            android:layout_toRightOf="@+id/img2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:paddingTop="13dp"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="26dp"
            android:background="@drawable/shape_text_lvse"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:text="退出组"
            android:gravity="center"
            android:textColor="@color/normal"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="26dp"
            android:background="@drawable/shape_text_yaoqin"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="75dp"
            android:text="邀请"
            android:textColor="#3dcc7a"
            android:gravity="center"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line"/>
    <com.compassecg.test720.compassecg.View.MyListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.compassecg.test720.compassecg.View.MyListView>
    </LinearLayout>
    </com.compassecg.test720.compassecg.View.BottomScrollView>
</LinearLayout>
