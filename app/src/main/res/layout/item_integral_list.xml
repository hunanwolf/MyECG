<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img"
            android:layout_width="105dp"
            android:layout_height="115dp"
            android:src="@mipmap/zazhi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="10dp"

                android:paddingRight="5dp"
                android:text="心脏疾病疑难心电图心脏疾病疑难心电图"
                android:textColor="@color/gwe"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/jifen"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="所需积分：50"
                android:textColor="@color/lv"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/okldui"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/duicoums"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:text="100人已兑换" />

                    <TextView
                        android:id="@+id/yucoums"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:text="剩余10份" />
                </LinearLayout>

                <TextView
                    android:id="@+id/okldui"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/drawoblelv"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="兑换"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
