<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shallowGrey"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/lay_search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:elevation="1dp"
            android:translationZ="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout

                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/back_tomove" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:background="@drawable/drawoblelll">


                <LinearLayout
                    android:id="@+id/seshahj"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/leibie"
                        android:layout_width="wrap_content"
                        android:text="租售"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/lv_search"
                        android:layout_width="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/kuang" />

                </LinearLayout>


                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="搜索关键字"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/text_light_gray"
                    android:textSize="15sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search"
                android:layout_width="0dp"

                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="@color/gwe"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>

        <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@+id/lay_search">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/lay_search"
            android:layout_height="match_parent">

            <View
                android:id="@+id/fenge"
                android:layout_width="match_parent"
                android:layout_height="15dp"

                android:background="@color/shallowGrey"></View>


            <View
                android:id="@+id/fenge2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/shallowGrey"></View>

            <RelativeLayout
                android:id="@+id/lv_Searchhistory"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/fenge2"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/lt_history"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="搜索结果"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                   android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="清除"
                    android:layout_marginTop="6dp"
                    android:src="@mipmap/search_cha"
                    />

                <View
                    android:id="@+id/fenge3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/lt_history"
                    android:background="@color/fenge"></View>




            </RelativeLayout>
            <ListView
                android:id="@+id/lsitview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lv_Searchhistory"
                android:scrollbars="none"></ListView>

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_below="@+id/lv_Searchhistory"
                android:layout_height="match_parent">


                <ListView
                    android:id="@+id/listll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>
                <ImageView
                    android:id="@+id/tu"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"
                    android:background="@drawable/no_searh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tu"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="还没有搜索到内容"
                    android:visibility="invisible"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
