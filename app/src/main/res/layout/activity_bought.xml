<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bought"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.compassecg.test720.compassecg.Home.AcitvityW.my.boughtActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="200dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/lv"
        app:tabTextAppearance="@style/tabTextSize"
        app:tabTextColor="@color/grey"

        ></android.support.design.widget.TabLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="1.5dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <View
            android:id="@+id/frist"
            android:layout_width="40dp"
            android:layout_centerInParent="true"
            android:background="@color/lv"
            android:layout_height="match_parent"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent">
        <View
            android:id="@+id/tow"
            android:layout_width="40dp"
            android:layout_centerInParent="true"
            android:background="@color/lv"
            android:layout_height="match_parent"></View>
    </RelativeLayout>
</LinearLayout>
    <com.compassecg.test720.compassecg.View.CustomViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"></com.compassecg.test720.compassecg.View.CustomViewPager>
</LinearLayout>
