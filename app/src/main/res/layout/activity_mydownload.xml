<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mydownload"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/shallowGrey"
    android:layout_height="match_parent"
    tools:context="com.compassecg.test720.compassecg.Home.AcitvityW.my.MydownloadActivity">
  
  <RelativeLayout
      android:id="@+id/til"
      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_height="48dp">

      <RelativeLayout
          android:id="@+id/back"
          android:layout_width="50dp"
          android:layout_height="match_parent">

          <ImageView
              android:layout_width="wrap_content"
              android:src="@drawable/back_tomove"
              android:layout_centerInParent="true"
              android:layout_height="wrap_content" />
      </RelativeLayout>

      <TextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:text="我的下载"
          android:gravity="center"
          android:textColor="@color/gwe"
          android:textSize="18sp"
          android:layout_centerInParent="true"
          android:layout_height="match_parent" />
      <RelativeLayout
          android:id="@+id/bainj"
          android:layout_width="50dp"
          android:layout_alignParentRight="true"
          android:layout_height="match_parent">
          <TextView
              android:id="@+id/xingwe"
              android:layout_width="wrap_content"
              android:layout_marginRight="15dp"
              android:text="编辑"
              android:gravity="center"
              android:textColor="@color/gwe"
              android:textSize="16sp"
              android:layout_height="match_parent" />
      </RelativeLayout>

  </RelativeLayout>
  
  
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_below="@+id/til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="200dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/lv"
        app:tabTextAppearance="@style/tabTextSize"
        app:tabTextColor="@color/grey"

        ></android.support.design.widget.TabLayout>
    <LinearLayout
        android:id="@+id/view"
        android:layout_below="@+id/tabs"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="1.5dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <View
                android:id="@+id/frist"
                android:layout_width="40dp"
                android:layout_centerInParent="true"
                android:background="@color/lv"
                android:layout_height="match_parent"></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">
            <View
                android:id="@+id/tow"
                android:layout_width="40dp"
                android:layout_centerInParent="true"
                android:background="@color/lv"
                android:layout_height="match_parent"></View>
        </RelativeLayout>
    </LinearLayout>
    <com.compassecg.test720.compassecg.View.CustomViewPager
        android:id="@+id/pager"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"></com.compassecg.test720.compassecg.View.CustomViewPager>

    <TextView
        android:id="@+id/clean"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/wenhong"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="删除"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_height="50dp" />
</RelativeLayout>
