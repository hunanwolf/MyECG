<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:background="@color/lv">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <com.compassecg.test720.compassecg.View.CircleImageView
                    android:id="@+id/img_header"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                   />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:text="name"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/zhiwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxEms="24"
                    android:text="成都华西医院.心电图科.主任"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="职称"
                    android:textColor="@color/gwe"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/zhicheng"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:text="职称"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/background"></View>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="48dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="医院"
                    android:textColor="@color/gwe"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/histoy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:text="医院"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/background"></View>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="48dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="科室"
                    android:textColor="@color/gwe"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/keshi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:text="职称"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/background"></View>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="职业专长"
                    android:textColor="@color/gwe"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxEms="40"
                    android:padding="10dp"
                    android:text="职称"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/background"></View>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="个人经历"
                    android:textColor="@color/gwe"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxEms="140"
                    android:padding="10dp"
                    android:text="职称"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>