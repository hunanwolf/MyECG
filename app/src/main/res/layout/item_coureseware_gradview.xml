<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:background="@color/wenhong"
                android:layout_height="160dp" />

            <TextView
                android:id="@+id/domwlod"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@color/translucent_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="已下载：95%"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/tureload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/magazine_download" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|top"
                android:layout_margin="15dp"
                android:background="@drawable/picture_setting_album_checkbox"
                android:button="@null"
                android:checked="false"
                android:focusable="false"
                android:visibility="invisible" />
        </RelativeLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="心脏疾病疑难心电图心脏疾病疑难心电图"
            android:textColor="@color/gwe"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
